[user]
	name = Suguru Kishimoto
	email = su@sfidante.co.jp
[core]
	excludesfile = /Users/Kishimoto/.gitignore_global
	editor = emacs -nw
	autocrlf = input
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	# check out
	co = checkout
	o = checkout
	# log
	tree = log --graph --color=always --format=\"%x09%C(yellow)%h%Creset%C(auto)%d %s %C(blue)(%cr)%Creset\"
	today = log --oneline --since='24 hour ago' --color=always --format=\" - %C(yellow)%h%Creset%C(auto)%d %s %C(blue)(%cr)%Creset\"
	# commit, merge
	st = status -sb
	addall = add -A .
	mnf = merge --no-ff
	fix = commit --amend
	# pull push
	pl = pull
	pu = push
	puu = push -u
	# remote
	update = fetch --all --prune
	push-all = "!f() { git push --all && git push --tags;}; f"
	rtag = ls-remote --tags
[color]
	ui = auto
[log]
	decorate = short
[push]
	default = simple

[merge "mergepbx"]
    name = XCode project files merger
    driver = /usr/local/bin/mergepbx %O %A %B
[credential]
	helper = osxkeychain
[ghq]
	root = ~/src
